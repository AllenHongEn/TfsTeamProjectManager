<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tc="clr-namespace:TeamProjectManager.Common;assembly=TeamProjectManager.Common">

    <DataTemplate DataType="{x:Type tc:TeamProjectCollectionInfo}">
        <TextBlock Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type tc:TeamProjectInfo}">
        <TextBlock Text="{Binding Path=Name}">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsDeleted}" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource ErrorForegroundBrush}" />
                            <Setter Property="ToolTip" Value="This project is deleted" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </DataTemplate>

</ResourceDictionary>